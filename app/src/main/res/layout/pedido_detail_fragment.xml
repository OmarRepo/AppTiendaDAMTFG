<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.buyaskill.homefragments.pedido_details.PedidoDetailViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        tools:context=".homefragments.pedido_details.PedidoDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <TextView
                android:id="@+id/fechaCreacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/boton_background_color"
                android:padding="2dp"
                android:text="@{`Pedido creado el: `+viewModel.pedido.fechaCreacion,default=`Pedido creado el: 2020-01-01`}"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toTopOf="@+id/guidelinehproducto2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelinehproducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelinehproducto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <TextView
                android:id="@+id/textPrecio_pedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/card_background_color"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="5dp"
                android:text="@{`Precio total del pedido: `+viewModel.pedido.precioTotal+`€`,default=`Precio total del pedido: 12 €`}"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guidelinehproducto" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <TextView
                android:id="@+id/pedidoEnviadoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/card_background_color"
                android:gravity="center"
                android:text="@{@string/pedidoConcat(viewModel.pedido.enviado.equals(`1`)?`enviado`:`sin enviar`),default=`enviado?`}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/guidelinehproducto"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guidelinehproducto2" />

            <TextView
                android:id="@+id/pedidoRecibidoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corners"
                android:backgroundTint="@color/card_background_color"
                android:gravity="center"
                android:text="@{@string/pedidoConcat(viewModel.pedido.recibido.equals(`1`)?`recibido`:`sin recibir`),default=`recibido?`}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/guidelinehproducto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/guidelinehproducto2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaPaquetes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:listData="@{viewModel.paquetes}"
            tools:listitem="@layout/paquete_card_layout" />
    </LinearLayout>
</layout>
